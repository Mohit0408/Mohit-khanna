       <div class="main">
          <div class="login_top">
          	<div class="container">
			  <div class="col-md-6">
				 <div class="login-page">
					<h4 class="title">New Customers</h4>
					<p>Welcome to Fitness Club! To know more about us and get a customised diet and day to day schedules, Please register to our services. We provide a bunch of quality stuff to our customers and we hope you have a good experience with us.</p>
					<div class="button1">
					   <a href="register.html"><input type="submit" name="Submit" value="Create an Account"></a>
					 </div>
					 <div class="clear"></div>
				  </div>
				</div>
				<div class="col-md-6">
				 <div class="login-page">
				  <div class="login-title">
	           		<h4 class="title">Registered Customers</h4>
					<div id="loginbox" class="loginbox">
						<%= form_for :fitness do |f| %>
						  <fieldset class="input">
						    <p id="login-form-username">
						      <%= f.label :email %><br>
							<%= f.text_field :email, :id=>"modlgn_username", :class=>"inputbox" %>
						      </p>
						    <p id="login-form-password">
						      <label for="modlgn_passwd">Password</label>
						      <input id="modlgn_passwd" type="password" name="password" class="inputbox" size="18" autocomplete="off">
						    </p>
						    <div class="remember">
							    <p id="login-form-remember">
							      <label for="modlgn_remember"><a href="#">Forget Your Password ? </a></label>
							   </p>
							    <input type="submit" name="Submit" class="button1" value="Login"><div class="clear"></div>
							 </div>
						  </fieldset>
						 <%end%>
					</div>
			      </div>
				</div>
				<div class="clear"></div>
			  </div>
			</div>
